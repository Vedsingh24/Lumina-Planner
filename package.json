{
  "name": "lumina-planner",
  "version": "1.0.0",
  "description": "Personal AI Productivity Planner",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "cross-env NODE_ENV=development concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.lumina.planner",
    "productName": "Lumina Planner",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "publish": null
    },
    "files": [
      "**/*",
      "!dist/*",
      "!.env.local"
    ],
    "asar": true
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0"
  }
}
